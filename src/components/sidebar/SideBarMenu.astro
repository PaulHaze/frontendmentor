---
import { Icon } from 'astro-icon/components';
import { cn } from '@/utils';

import { routes } from './routes';

interface Props {
	sideBarActiveItemID: string;
}

const { sideBarActiveItemID } = Astro.props;
---

<ul class="menu w-full space-y-3 overflow-y-auto px-2">
	{
		routes.map((route) => (
			<li class="">
				<a
					href={route.href}
					id={route.id}
					class={cn(
						`bg-base-100/70 flex justify-between overflow-hidden rounded-lg py-4 text-lg hover:bg-white/50 active:bg-white dark:bg-black/30 dark:hover:bg-white/10 ${route.id === sideBarActiveItemID && 'active-menu'}`
					)}
				>
					{route.label}
					{route.icon && <Icon class="mr-1" size={28} name={route.icon} />}
				</a>
			</li>
		))
	}
</ul>
